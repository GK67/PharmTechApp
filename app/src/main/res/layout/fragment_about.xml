<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:padding="20dp"
    tools:context="com.bhcc.app.pharmtech.view.about.AboutFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="40dp"
            android:textSize="25dp"
            android:text="About Us"/>

        <TextView
            android:id="@+id/about_us_app_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:paddingBottom="20dp"
            android:text=""/>

        <TextView
            android:id="@+id/about_us_class_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:paddingBottom="20dp"
            android:text=""/>

        <TextView
            android:id="@+id/about_us_class_instructor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:paddingBottom="20dp"
            android:text=""/>

        <TextView
            android:id="@+id/about_us_developer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:paddingBottom="20dp"
            android:text=""/>

        <TextView
            android:id="@+id/about_us_class_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:paddingBottom="20dp"
            android:text=""/>

        <TextView
            android:id="@+id/about_us_requirement_specification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:paddingBottom="20dp"
            android:text=""/>

        <TextView
            android:id="@+id/about_us_credits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text=""/>

    </LinearLayout>

</ScrollView>
